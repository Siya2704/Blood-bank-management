<!doctype html>
<html lang="en">

<head>
    <%- include('partials/header') %>
        <title>New Donor</title>
        <style>
            body {
                background: lightgray;
                margin: 0 auto;
                margin-top: 50px;
                font-family: arial;
            }

            h1 {
                color: brown;
                text-align: center;
            }

            label {
                color: #777;
                width: 16%;
                display: inline-block;
            }

            #container {
                padding: 20px;
                width: 60%;
                margin: 0 auto;
                margin-top: 1%;
                margin-bottom: 1%;
                background-color: white;
            }

            .userinput {
                padding-top: 7px;
                padding-bottom: 7px;
                padding-left: 5px;
                padding-right: 5px;
                margin-bottom: 30px;
            }

            textarea {
                color: brown;
                font-size: 14px;
            }

            .sampleBtn {
                background-color: brown;
                color: white;
                border-color: white;
                cursor: pointer;
            }
        </style>
</head>

<body>
    <%- include('partials/navbar') %>
        <div id="container">
            <h1> Donor Sample Report </h1>
            <form action="/bloodbank/checker_form/<%=date%>/<%=emp_id%>" method="POST">
                <div class="userinput">
                    <label for="aadhar"> Aadhar Number: </label>
                    <input type="number" name="aadhar" id="aadhar" value="<%=id%>" readonly>
                </div>

                <div class="userinput">
                    <label for="name"> Name </label>
                    <input type="text" id="name" name="name" value="<%=name%>" readonly>
                </div>

                <div class="userinput">
                    <label for="bg">Blood Group </label>
                    <select name="bg" required>
                        <option disabled selected value>select an option </option>
                        <option value="A+" id="bg">A+</option>
                        <option value="B+" id="bg">B+</option>
                        <option value="AB+" id="bg">AB+ </option>
                        <option value="O+" id="bg">O+ </option>
                        <option value="A-" id="bg">A-</option>
                        <option value="B-" id="bg">B-</option>
                        <option value="AB-" id="bg">AB-</option>
                        <option value="O-" id="bg">O-</option>
                    </select>
                </div>

                <div class="userinput input-group mb-3">
                    <label for="iron"> Iron content </label>
                    <input type="number" step="0.01" id="iron" name="iron" required>
                    <span class="input-group-text"> g/dl</span>
                </div>

                <div class="userinput  input-group mb-3">
                    <label for="quantity"> Quantity </label>
                    <input type="quantity" id="quantity" name="quantity" required>
                    <span class="input-group-text"> ml</span>
                </div>

                <div class="userinput">
                    <label> Can it be used? </label>
                    <input type="radio" name="good" value="y" /> Yes
                    <input type="radio" name="good" value="n" /> No
                </div>

                <div style="text-align:center">
                    <input type="reset" class="sampleBtn btn btn-outline-primary" />
                    <input type="submit" class="sampleBtn btn btn-outline-success" />
                </div>

            </form>

        </div>
        <%- include('partials/footer') %>
</body>

</html>
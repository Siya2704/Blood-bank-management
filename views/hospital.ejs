<!doctype html>
<html lang="en">

<head>
    <%- include('partials/header') %>
        <title>Hospital</title>
        <style>
            body {
                background: lightgray;
                margin: 0 auto;
                margin-top: 50px;
                font-family: arial;
            }

            h1 {
                color: brown;
                text-align: center;
            }

            label {
                color: #777;
                width: 16%;
                display: inline-block;
            }

            #container {
                padding: 20px;
                width: 60%;
                margin: 0 auto;
                margin-top: 1%;
                margin-bottom: 1%;
                background-color: white;
            }

            .userinput {
                padding-top: 7px;
                padding-bottom: 7px;
                padding-left: 5px;
                padding-right: 5px;
                margin-bottom: 30px;
            }

            label {
                color: brown;
                font-size: 14px;
            }

            textarea {
                color: brown;
                font-size: 14px;
            }

            .sampleBtn {
                background-color: #f1f1f1;
                width: 20%;
                height: 35px;
                font-size: 16px;
            }

            .sampleBtn:hover {
                color: white;
                background-color: brown;
                cursor: pointer;
            }
        </style>
</head>

<body>
    <%- include('partials/navbar') %>
        <div id="container">
            <h1> Hospital Registration Form </h1>

            <form action="/bloodbank/hospital" method="POST">
                <div class="userinput">
                    <label for="id"> Hospital Number: </label>
                    <input type="number" name="id" id="id" required>
                </div>

                <div class="userinput">
                    <label for="name"> Hospital Name </label>
                    <input type="text" id="name" name="name" required>
                </div>

                <div class="userinput">
                    <label for="address"> Address </label>
                    <input type="text" name="address" id="address" required />
                </div>

                <div class="userinput">
                    <label for="email"> Email </label>
                    <input type="text" id="email" name="email" />
                </div>

                <div class="userinput">
                    <label for="phone"> Phone </label>
                    <input type="number" name="phone" id="phone" required />
                </div>

                <div class="userinput">
                    <label for="bg">Blood Group </label>
                    <select name="bg" required>
                        <option disabled selected value>select an option </option>
                        <option value="A+" id="bg">A+</option>
                        <option value="B+" id="bg">B+</option>
                        <option value="AB+" id="bg">AB+ </option>
                        <option value="O+" id="bg">O+ </option>
                        <option value="A-" id="bg">A-</option>
                        <option value="B-" id="bg">B-</option>
                        <option value="AB-" id="bg">AB-</option>
                        <option value="O-" id="bg">O-</option>
                    </select>
                </div>

                <div class="userinput  input-group mb-3">
                    <label for="quantity"> Quantity </label>
                    <input type="number" id="quantity" name="quantity" required>
                    <span class="input-group-text"> ml</span>
                </div>

                <div style="text-align:center">
                    <input type="reset" class="sampleBtn" />
                    <input type="submit" class="sampleBtn" />
                </div>

            </form>

        </div>
        <%- include('partials/footer') %>
</body>

</html>